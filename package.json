{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix src/**/*.{js,jsx,ts,tsx}"
        ],
        "*.{json,md,scss,yaml,yml}": [
            "prettier --write"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}",
            "!src/index.tsx",
            "!src/**/index.ts",
            "!**/recoil/**",
            "!**/model/**",
            "!**/dtos/**",
            "!**/node_modules/**",
            "!**/test-utils.tsx"
        ]
    },
    "majestic": {
        "args": [
            "--env=jest-environment-jsdom-sixteen"
        ]
    },
    "scripts": {
        "watch:style": "postcss src/assets/styles/tailwind.css -o src/assets/styles/main.css && react-scripts start",
        "start": "npm run watch:style && react-scripts start",
        "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
        "lint:fix": "eslint --fix src/**/*.{js,jsx,ts,tsx}",
        "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
        "test:coverage": "react-scripts test --coverage --watchAll --env=jest-environment-jsdom-sixteen",
        "coveralls": "react-scripts test --coverage --env=jest-environment-jsdom-sixteen && cat ./coverage/lcov.info | coveralls",
        "build": "npm run build:style && react-scripts build",
        "build:style": "postcss src/assets/styles/tailwind.css -o src/assets/styles/main.css --env production",
        "storybook": "start-storybook -p 9009 -s public",
        "build-storybook": "build-storybook -s public"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "axios": "^0.19.2",
        "bootstrap": "^4.5.0",
        "dayjs": "^1.8.28",
        "react": "^16.13.1",
        "react-bootstrap": "^1.0.1",
        "react-dom": "^16.13.1",
        "react-icons": "^3.10.0",
        "react-scripts": "3.4.1",
        "recoil": "0.0.8",
        "typescript": "^3.7.5"
    },
    "devDependencies": {
        "@storybook/addon-actions": "^5.3.19",
        "@storybook/addon-links": "^5.3.19",
        "@storybook/addons": "^5.3.19",
        "@storybook/preset-create-react-app": "^3.0.0",
        "@storybook/react": "^5.3.19",
        "@testing-library/jest-dom": "^5.9.0",
        "@testing-library/react": "^10.2.1",
        "@testing-library/react-hooks": "^3.3.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^25.2.3",
        "@types/node": "^14.0.11",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/react-modal": "^3.10.5",
        "@types/recoil": "0.0.0",
        "@typescript-eslint/eslint-plugin": "^3.1.0",
        "@typescript-eslint/parser": "^3.2.0",
        "autoprefixer": "^9.8.0",
        "coveralls": "^3.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-react": "^1.1.7",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.20.0",
        "husky": "4.2.5",
        "jest-date-mock": "^1.0.8",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "lint-staged": "10.2.9",
        "postcss-cli": "^7.1.1",
        "prettier": "^2.0.5",
        "react-test-renderer": "^16.13.1",
        "tailwindcss": "^1.4.6",
        "ts-jest": "^26.1.0"
    }
}
